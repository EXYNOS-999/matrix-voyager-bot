    "lint:app": "tslint --project ./tsconfig-app.json -t stylish",
    "lint:web": "tslint --project ./tsconfig.json -t stylish",
    "build": "npm run build:bot && npm run build:web",
    "build:bot": "rimraf build/app && tsc --project tsconfig-app.json",
